{
  "info": {
    "_postman_id": "0fa9259d-29e7-4de2-9b7d-1295e78b7825",
    "name": "AI Trip Assistant Map Routes",
    "description": "Collection for exercising the /api/map/route endpoint on the API server.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "BFF Map API",
      "item": [
        {
          "name": "Generate Google Map Route",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text",
                "description": "User JWT from login."
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"origin\": \"{{origin}}\",\n  \"destination\": \"{{destination}}\",\n  \"travelMode\": \"{{travel_mode}}\"\n}"
            },
            "url": {
              "raw": "{{bff_base_url}}/api/map/route",
              "host": [
                "{{bff_base_url}}"
              ],
              "path": [
                "api",
                "map",
                "route"
              ]
            },
            "description": "Calls the BFF map endpoint to create a Google Maps route suitable for the frontend iframe."
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response body contains success code', function () {",
                  "    var json = pm.response.json();",
                  "    pm.expect(json).to.have.property('code', 1);",
                  "    pm.expect(json).to.have.property('data');",
                  "    pm.expect(json.data).to.have.property('embedUrl');",
                  "});"
                ]
              }
            }
          ],
          "response": []
        }
      ]
    }
  ],
  "event": [],
  "variable": [
    {
      "key": "bff_base_url",
      "value": "http://localhost:8082",
      "type": "string",
      "description": "Base URL for the API server."
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "origin",
      "value": "Sydney Opera House",
      "type": "string"
    },
    {
      "key": "destination",
      "value": "Bondi Beach NSW",
      "type": "string"
    },
    {
      "key": "travel_mode",
      "value": "driving",
      "type": "string",
      "description": "Allowed: driving, walking, bicycling, transit."
    }
  ]
}
